---
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <slot name="meta">
      <meta
        name="title"
        content="Cybernaut Studio | 3D E-commerce & AR Solutions"
      />
      <meta
        name="description"
        content="Cybernaut Studio transforms flat e-commerce stores into immersive 3D experiences. We specialize in interactive product models and WebAR for luxury and indie brands."
      />

      <meta property="og:type" content="website" />
      <meta property="og:url" content="https://cybernaut.studio/" />
      <meta
        property="og:title"
        content="Cybernaut Studio | Elevate Your E-commerce"
      />
      <meta
        property="og:description"
        content="Replace flat images with interactive 3D and AR. Increase conversions and customer satisfaction with bespoke WebGL solutions."
      />

      <!-- TODO: Replace with actual image -->
      <meta
        property="og:image"
        content="https://cybernaut.studio/social-share-image.jpg"
      />

      <meta property="twitter:card" content="summary_large_image" />
      <meta property="twitter:url" content="https://cybernaut.studio/" />
      <meta
        property="twitter:title"
        content="Cybernaut Studio | 3D & AR for E-commerce"
      />
      <meta
        property="twitter:description"
        content="Turn browsers into buyers. We build high-end 3D product configurators and AR experiences for modern brands."
      />
      <!-- TODO: Replace with actual image -->
      <meta
        property="twitter:image"
        content="https://cybernaut.studio/social-share-image.jpg"
      />

      <meta
        name="keywords"
        content="3D e-commerce, WebGL agency, Shopify AR, ThreeJS developer, Jewelry 3D viewer, Interactive Product Visualization"
      />
    </slot>

    {
      import.meta.env.PROD && (
        <script
          type="text/partytown"
          defer
          src="https://cloud.umami.is/script.js"
          data-website-id="59d393ea-6914-4eff-86fe-4a5bb2f04af7"
        />
      )
    }

    <title>Cybernaut Studio | 3D E-commerce & AR Solutions</title>
  </head>
  <body class="bg-theme-background text-neutral-100">
    <slot />
  </body>
</html>
